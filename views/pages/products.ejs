<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <header><%- include('../partials/header'); %></header>
    <main>
      <ul class="products">
        <% hamburgers.forEach((hamburger) => { %>
        <li class="menuItem">
          <div class="menuDescription">
            <input type="hidden" name="idForEdit" />
            <a href="/admin/hamburgers/<%= hamburger.id %>">Edit</a>
            <input type="hidden" name="idForDelete" />
            <a href="/admin/hamburgers/<%= hamburger.id %>">Delete</a>
            <h2><%= hamburger.name %></h2>
            <p><%= hamburger.toppings %></p>
            <span><%= hamburger.price %>- Ft.</span>
          </div>
        </li>
        <% }); %>
      </ul>
    </main>
    <script src="/javascript/nav.js"></script>
  </body>
</html>
